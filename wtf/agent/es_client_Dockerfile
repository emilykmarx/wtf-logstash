FROM ubuntu:22.04

WORKDIR /usr/src/app

RUN apt-get update \
    && apt-get install -y \
    wget \
    vim \
    curl \
    pkg-config \
    libssl-dev \
    git \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# ES client
RUN python3 -m pip install elasticsearch

# Prom agent
COPY . .
RUN git clone https://github.com/akshayknarayan/wtf-prometheus-agent.git
RUN curl https://sh.rustup.rs -sSf | bash -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"
WORKDIR wtf-prometheus-agent
RUN cargo build
